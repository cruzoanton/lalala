<div class="mx-auto border rounded-form w-auth h-reset my-20 items-center bg-white">
  <div class="flex flex-col justify-evenly mx-auto h-reset">
    <div>
      <h3 class="text-center text-heading font-bold non-italic mb-4">Reset your password</h3>
      <h4 class="text-center text-subheading font-subheading text-secondblack">Enter the email associated with your account and <br> we'll send you an email to reset it.<br></h4>
    </div>
    <div class="w-auth-form mx-auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="mb-2">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email',
            class: "appearance-none border rounded-full w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="actions">
          <%= f.submit "SEND", class: "bg-main hover:bg-green-600 text-white font-bold py-2 px-4 mt-4 rounded-full w-full focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
    <p class="mx-auto">Donâ€™t have an account?</p>
  </div>
</div>
